= simple_form_for @meme, html: { multipart: true } do |f|
	- if @meme.errors.any?
		#errors
			%h2
				= pluralize(@meme.errors.count, "error")
				prevented this Pin from saving
			%ul
				- @meme.errors.full_messages.each do |msg|
					%li= msg


	.form-group
		= f.input :toptext , input_html: { class: 'form-control', required: true }

	.form-group
		= f.input :bottomtext, :required => 'required' , input_html: { class: 'form-control' }

	= f.button :submit, class: "btn btn-primary"